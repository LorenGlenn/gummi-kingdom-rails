<h1 class="well">Gummi-Kingdom!</h1>

<div class="row">
  <% if @products.any? %>
  <% @products.each do |p| %>
  <div class="col-md-3">
    <%= link_to image_tag(p.image), product_path(p) %>
    <br>
    Product: <%= link_to p.name, product_path(p) %>
    <br>
    Price: $<%= p.cost %>
  </div>
  <% end %>
  <% else %>
  <p>
    There are no products yet! Click <%= link_to "here", new_product_path %> to add one!
  </p>
  <% end %>
</div>
